@model FundRaiser.Team5.Core.Options.OptionProject

@{
    ViewData["Title"] = "Details";
    if (Model.UserId > 0)
    {
        Layout = "_LayoutLoggedIn";
    }
    else
    {
        Layout = "_Layout";
    }

}

<h1>Details</h1>

<div>
    <h4>Status Update</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.CurrentFund)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FundingGoal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.StatusUpdates)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FundingPackages)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Images)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Videos)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
